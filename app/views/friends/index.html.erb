<% if user_signed_in? %>
<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <% if friend.user == current_user %>
        <td><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
      <!--   <td><%= link_to 'Show', friend, class:"btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-secondary" %></td> -->
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h1>Hello World</h1>
<p>This is the first web page</p>
<% end -%>
<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
